  height: 150rpx; 
  background: white;
}

.org-info-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx 40rpx;
}

.org-title-wrp {
  display: flex;
  width: 100%;
  height: 120rpx;
  justify-content: center;
  flex-direction: column;
  margin-top: 15rpx;
  margin-right: 20rpx;
}

.org-description-wrp{
  display: flex;
  flex-wrap: wrap;
  background: white;
  padding: 20rpx 50rpx;
}
.org-description-text {
  width: 100%;
  color:#707070;
  font-size: 11px;
  font-weight: light;
}

.qr-wrp {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 320rpx;
  background: white;
  padding-bottom: 20rpx;
}

.qr {
  width: 300rpx;
  height: 300rpx;
}

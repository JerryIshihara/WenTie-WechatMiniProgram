/* pages/home/home.wxss */

Page {
  background: #f3f3f3;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

/* Swiper */

swiper {
    padding-top: 10rpx;
    height: 350rpx;
}

swiper-item image {
    width: 100%;
    height: 100%;
}

.swiper-container {
    position: relative;
}

.swiper-container .swiper {
    height: 350rpx;
}

.swiper-container .swiper .img {
    width: 100%;
    height: 100%;
}

.card-wrp{
    position: relative;
    margin: 15rpx;
}
.card-custom{
    background: #FF6D78;
    border-radius: 10rpx;
}
.spliter{
    margin-right: 10rpx;
}

.search-option {
    position: fixed;
    z-index: 999;
    top: 54px;
    width: 100%;
    height: 100%;
    background: #00000067;
}

.loading-wrp {
  width: 100%;
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.thumb {
    display: flex;
    width: 100%;
    margin-bottom: 5px;
    border-top-right-radius:5px;
    border-top-left-radius:5px;
}
.title-wrp {
    width: 100%;
    padding: 2px 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title {
    font-size: 14px;
    font-weight: 400;
    padding: 2px 8px;
    padding-right: 0px; 
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all; /* 追加这一行代码 */
}
.price {
    width: 65px;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
